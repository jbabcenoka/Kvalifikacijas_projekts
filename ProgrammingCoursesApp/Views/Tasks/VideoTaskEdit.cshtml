@model ProgrammingCoursesApp.Models.VideoTask


@{
    ViewData["Title"] = "Edit video task";
}

<h1>Edit video task</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditVideoTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TopicBlockId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <textarea asp-for="Link" class="form-control" rows="5" autocomplete="off"></textarea>
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TopicBlock.DisplayOrder" class="control-label"></label>
                <input asp-for="@Model.TopicBlock.DisplayOrder" class="form-control" />
                <span asp-validation-for="@Model.TopicBlock.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TopicBlock.Points" class="control-label"></label>
                <input asp-for="@Model.TopicBlock.Points" class="form-control" />
                <span asp-validation-for="@Model.TopicBlock.Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-info" asp-action="TasksForCoursesCreator" asp-route-id="@Model.TopicBlock.Topic.Id">Back to topics</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}